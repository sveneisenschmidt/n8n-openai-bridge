{
  "name": "n8n-openai-bridge",
  "description": "OpenAI-compatible API middleware for n8n workflows",
  "license": "AGPL-3.0",
  "author": "Sven Eisenschmidt",
  "repository": {
    "type": "git",
    "url": "https://github.com/sveneisenschmidt/n8n-openai-bridge.git"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "express": "^5.1.0",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 10000
  }
}
