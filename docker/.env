# Server Configuration
PORT=3333
BEARER_TOKEN=change-me
LOG_REQUESTS=false

# Model Loader Configuration
# Options: file (default), n8n-api, static
MODEL_LOADER_TYPE=file

# File Loader Configuration (when MODEL_LOADER_TYPE=file)
MODELS_CONFIG_FILE=./models.json

# Auto-Discovery Loader Configuration (when MODEL_LOADER_TYPE=n8n-api)
# Uncomment and configure these to use auto-discovery:
# N8N_BASE_URL=https://your-n8n-instance.com
# N8N_API_BEARER_TOKEN=n8n_api_xxxxxxxxxxxxx
# AUTO_DISCOVERY_TAG=n8n-openai-bridge
# AUTO_DISCOVERY_POLL_INTERVAL=300

# Webhook Authentication (optional)
# Auth token for n8n webhooks (if n8n requires authentication)
N8N_WEBHOOK_BEARER_TOKEN=

# Session & User Context Headers
SESSION_ID_HEADERS=X-Session-Id,X-Chat-Id,X-OpenWebUI-Chat-Id
USER_ID_HEADERS=X-User-Id
USER_EMAIL_HEADERS=X-User-Email
USER_NAME_HEADERS=X-User-Name
USER_ROLE_HEADERS=X-User-Role

# Timeout Configuration (in milliseconds)
# N8N_TIMEOUT=300000
# SERVER_TIMEOUT=300000
# SERVER_KEEP_ALIVE_TIMEOUT=120000
# SERVER_HEADERS_TIMEOUT=121000

# File Upload Configuration
# Options: passthrough (default), extract-json, extract-multipart, disabled
# FILE_UPLOAD_MODE=passthrough
